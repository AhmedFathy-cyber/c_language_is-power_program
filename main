#include <stdio.h>
#include <stdlib.h>
int isPower(int x,int*number,int *power);

int main()
{

    int number = 0 ;
    int power =0;

    int x ;
    int check=1;


    while(1)
    {
        printf("enter the number : ");
        scanf("%d",&x);
        check =isPower(x, &number,&power);
        if (check==0)
        {
            printf("No power founded for [%d]\n",x);
        }
        else
        {
            printf("number [%d] = [%d]^[%d] \n",x,number,power);
        }

    }




    return 0;
}
